<div class="content page" ng-controller="HomeCtrl">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Attendance Overview</h4>
                        <p class="category">Absences {{absencesLeft}}</p>
                    </div>
                    <div class="content">
                        <div id="attendance_overview_bar" class="ct-chart"></div>
                        <div class="footer">
                            <hr>
                            <div class="stats">
                                <i class="fa fa-area-chart"></i> Exact values
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Sign In</h4>
                    </div>
                    <div class="content">
                        <form ng-submit="signin(code)">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Code</label>
                                        <input type="text" class="form-control" placeholder="Code" ng-model="code">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right">Welcome Sign In</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Attendance Details</h4>
                        <p class="category">Attendance status per each event so far</p>
                    </div>
                    <div class="content table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Date</th>
                            </thead>
                            <tbody>
                                <tr ng-repeat="attendance in attendances | orderBy:'-timestamp'">
                                    <td>{{attendance.title}}</td>
                                    <td ng-class="{'text-success': attendance.type === 'Attended', 'text-danger': attendance.type === 'Absent', 'text-warning': attendance.type === 'Expected Absent'}">{{attendance.type}}</td>
                                    <td>{{attendance.date}} <button style="margin-left: 10px" ng-if="attendance.type === 'Expected Absent'" ng-click="deleteExpectedAbsence(attendance);"><i class="fa fa-trash"></i></button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
