        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Set Scores</h4>
                        <p class="category">Form for instructors/graders to set scores for assignments</p>
                    </div>
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Member</label>
                                        <select ng-model="set_score_uid">
                                            <option ng-repeat="member in members | orderBy:'+name'" value="{{member.uid}}">{{member.name}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Assignment</label>
                                        <select ng-model="set_score_assignmentId">
                                            <option ng-repeat="assignment in assignments" value="{{assignment.key}}">{{assignment.name}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Score</label>
                                        <input type="text" class="form-control" placeholder="10/10" value="" ng-model="set_score_score">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right" ng-click="setScore()">Set</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Create Assignments</h4>
                        <p class="category">Form for instructors/graders to create assignments</p>
                    </div>
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Due</label>
                                        <input type="text" class="form-control" placeholder="1/17/17" value="" ng-model="create_assignment_due">
                                    </div>
                                    <div class="form-group">
                                        <label>Documentation Link</label>
                                        <input type="text" class="form-control" placeholder="http://google.com" value="" ng-model="create_assignment_link">
                                    </div>
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" class="form-control" placeholder="Android Mini Proj 1" value="" ng-model="create_assignment_name">
                                    </div>
                                    <div class="form-group">
                                        <select multiple class="form-control" ng-model="create_assignment_roles">
                                            <option ng-repeat="role in roles" value="{{roles.indexOf(role)}}">{{role}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right" ng-click="createAssignment()">Create</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Expected Absence Overview</h4>
                        <p class="category pull-left">View of all expected absences</p>
                        <p class="category pull-right btn btn-default hide-button" ng-click="toggleExpectedAbsences()">{{hideExpectedAbsencesLabel}}</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>Name</th>
                                <th>Event</th>
                                <th>Reason</th>
                            </thead>
                            <tbody ng-hide="hideExpectedAbsences">
                                <tr ng-repeat="expected in expectedAbsences | orderBy:'-title'">
                                    <td>{{expected.name}}</td>
                                    <td>{{expected.title}}</td>
                                    <td>{{expected.reason}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Assignment Overview</h4>
                        <p class="category pull-left">View of all assignments created</p>
                        <p class="category pull-right btn btn-default hide-button" ng-click="toggleAssignments()">{{hideAssignmentLabel}}</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>Name</th>
                                <th>Due</th>
                                <th>Link</th>
                                <th>Roles</th>
                            </thead>
                            <tbody ng-hide="hideAssignments">
                                <tr ng-repeat="assignment in assignments">
                                    <td>{{assignment.name}}</td>
                                    <td>{{assignment.due}}</td>
                                    <td><a href="{{assignment.link}}" target="_blank">{{assignment.link}}</a></td>
                                    <td>{{roleIdsToString(assignment.roleIds)}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Score Overview</h4>
                        <p class="category pull-left">View of scores for all assignments for all members</p>
                        <p class="category pull-right btn btn-default hide-button" ng-click="toggleScores()">{{hideScoreLabel}}</p>
                        <select ng-model="score_overview_assignmentId" class="category pull-right form-control filter-select">
                            <option ng-repeat="a in assignments" value="{{a.key}}">{{a.name}}</option>
                        </select>
                        <p class="category pull-right" style="margin-right: 5px;">{{num_scores}} / {{scores.length}} submitted</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>Assignment Name</th>
                                <th>Member Name</th>
                                <th>Score</th>
                                <th>Due</th>
                            </thead>
                            <tbody ng-hide="hideScores">
                                <tr ng-repeat="score in scores | orderBy:'-member_name'">
                                    <td>{{score.assignment_name}}</td>
                                    <td>{{score.member_name}}</td>
                                    <td>{{score.score}}</td>
                                    <td>{{score.due}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
