<div class="content page">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="header">
                    <h4 class="title">My Contributions</h4>
                    <p class="category pull-left">Determined by this <a href="https://github.com/MobileDevelopersOfBerkeley/mdbcentral/blob/master/util/github.js" target="_blank">algorithm</a></p>
                </div>
                <div class="content">
                    <br />
                    <img src="<%- user.profileImage %>" class="image-circle">
                    <h1 style="font-size: 48px; display: inline-block; vertical-align: middle; margin-left: 15px"><%- myContributions %></h1>
                </div>
            </div>
        </div>
    </div>
          <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Most Contributions</h4>
                        <p class="category pull-left">Determined by same algorithm linked above</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>#</th>
                                <th>Name</th>
                                <th>Conributions</th>
                            </thead>
                            <tbody>
                                <% for (var i = 0; i < mostContribs.length; i++) { %>
                                  <% var contrib = mostContribs[i]; %>
                                  <tr>
                                    <td><%- (i + 1) %></td>
                                    <td><%- contrib.name %></td>
                                    <td><%- contrib.value %></td>
                                  </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
          <div class="col-md-6">
              <div class="card">
                  <div class="header">
                      <h4 class="title">Most Repos Contributed to</h4>
                      <p class="category pull-left">Determined by # of repos user has contributed to</p>
                  </div>
                  <div class="content table-responsive table-full-width">
                      <table class="table table-hover table-striped">
                          <thead>
                              <th>#</th>
                              <th>Name</th>
                              <th>Repos</th>
                          </thead>
                          <tbody>
                              <% for (var i = 0; i < mostRepoContribs.length; i++) { %>
                                <% var contrib = mostRepoContribs[i]; %>
                                <tr>
                                  <td><%- (i + 1) %></td>
                                  <td><%- contrib.name %></td>
                                  <td><%- contrib.value %></td>
                                </tr>
                              <% } %>
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
        <% if (leadership) { %>
          <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Effort Rating Overview</h4>
                        <p class="category pull-left">Determined by same algorithm for contributions</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>#</th>
                                <th>Profile</th>
                                <th>Name</th>
                                <th>Contributions</th>
                                <th>Rating</th>
                            </thead>
                            <tbody>
                                <% for (var i = 0; i < contributions.length; i++) { %>
                                  <% var contrib = contributions[i]; %>
                                  <tr>
                                    <td><%- (i + 1) %></td>
                                    <td><img src="<%- contrib.profileImage %>" class="image-circle"></td>
                                    <td><%- contrib.name %></td>
                                    <td><%- contrib.value %></td>
                                    <td><%- contrib.rating %></td>
                                  </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
