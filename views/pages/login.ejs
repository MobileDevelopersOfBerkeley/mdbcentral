<div class="content page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title">Login</h4>
          </div>
          <div class="content">
            <form>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="email goes here" value="" id="loginEmail" required>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="password goes here" value="" id="loginPassword" required>
                  </div>
                </div>
              </div>
              <button type="button" class="btn btn-info btn-fill pull-right" style="margin-left: 10px;" onclick="login()">Login</button>
            </form>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title">Sign Up</h4>
          </div>
          <div class="content">
            <form action="/users" enctype="multipart/form-data" method="post" id="signUpForm">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" class="form-control" placeholder="full name goes here" value="" name="name" id="name">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="email goes here" value="" name="email" id="email">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="password goes here" value="" name="password" id="password">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" placeholder="confirm password goes here" value="" name="confpassword" id="confpassword">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Profile Image</label>
                    <input type="file" name="profileImage" id="profileImage">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Are you a new member in MDB?</label>
                    <input type="checkbox" name="newMember" value="true" id="newMember">
                    <input type='hidden' name='newMember' value='false'>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Role</label>
                    <select form="signUpForm" name="roleId" id="roleId">
                      <% for (var i = 0; i < roles.length; i++) { %>
                        <% var role = roles[i]; %>
                        <option value="<%- i %>"><%- role.title %></option>
                      <% } %>
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Year</label>
                    <select form="signUpForm" name="year" id="year">
                      <option value="Freshman">Freshman</option>
                      <option value="Sophomore">Sophomore</option>
                      <option value="Junior">Junior</option>
                      <option value="Senior">Senior</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Major</label>
                    <input type="text" class="form-control" placeholder="major goes here" name="major" id="major">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>GitHub Username</label>
                    <input type="text" class="form-control" placeholder="put github username here" name="githubUsername" id="githubUsername">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Birthday</label>
                    <input type="text" class="form-control" placeholder="MM/DD/YY" name="birthday" id="birthday">
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-info btn-fill pull-right">Sign Up</button>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
