<div class="content page" ng-controller="LoginCtrl">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title">Login</h4>
          </div>
          <div class="content">
            <form>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="email goes here" value="" ng-model="login_email">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="password goes here" value="" ng-model="login_password">
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-info btn-fill pull-right" ng-click="login()" style="margin-left: 10px;">Login</button>
              <button class="btn btn-info btn-fill pull-right" ng-click="resetPassword()">Reset Password</button>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title">Sign Up</h4>
          </div>
          <div class="content">
            <form>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" class="form-control" placeholder="full name goes here" value="" ng-model="signup_name">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="email goes here" value="" ng-model="signup_email">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="password goes here" value="" ng-model="signup_password">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" placeholder="confirm password goes here" value="" ng-model="signup_confpassword">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Profile Image</label>
                    <input type="file" filemodel="signup_profileImage">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Are you a new member in MDB?</label>
                    <input type="checkbox" ng-model="signup_new">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Role</label>
                    <select ng-model="signup_roleId">
                      <option ng-repeat="role in roles" value="{{roles.indexOf(role)}}">{{role}}</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Year</label>
                    <select ng-model="signup_year">
                      <option value="Freshman">Freshman</option>
                      <option value="Sophomore">Sophomore</option>
                      <option value="Junior">Junior</option>
                      <option value="Senior">Senior</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Major</label>
                    <input type="text" class="form-control" placeholder="major goes here" ng-model="signup_major">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>GitHub Username</label>
                    <input type="text" class="form-control" placeholder="put github username here" ng-model="signup_githubUsername">
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-info btn-fill pull-right" ng-click="signup()">Sign Up</button>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>