<div class="content page">
    <div class="container-fluid">
        <div class="row">
          <div class="col-md-6">
            <div class="card">
                <div class="header">
                    <h4 class="title">Categorical Spending</h4>
                    <p class="category">Pie graph of spending by category</p>
                </div>
                <div class="content">
                    <div id="category_spending_graph" class="ct-chart ct-perfect-fourth"></div>
                    <div class="footer">
                        <i class="fa fa-circle text-info"></i> Contract
                        <i class="fa fa-circle text-danger"></i> Membership Dues
                        <i class="fa fa-circle text-warning"></i> Junior
                        <i class="fa fa-circle text-other"></i> Retreat
                        <i class="fa fa-circle text-other"></i> Food
                        <i class="fa fa-circle text-other"></i> Events
                        <i class="fa fa-circle text-other"></i> Reimbursements
                        <i class="fa fa-circle text-other"></i> Other
                        <hr>
                        <div class="stats">
                            <i class="fa fa-pie-chart"></i> Rounded values
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card">
                <div class="header">
                    <h4 class="title">Categorical Income</h4>
                    <p class="category">Pie graph of income by category</p>
                </div>
                <div class="content">
                    <div id="category_income_graph" class="ct-chart ct-perfect-fourth"></div>
                    <div class="footer">
                        <i class="fa fa-circle text-info"></i> Contract
                        <i class="fa fa-circle text-danger"></i> Membership Dues
                        <i class="fa fa-circle text-warning"></i> Junior
                        <i class="fa fa-circle text-other"></i> Retreat
                        <i class="fa fa-circle text-other"></i> Food
                        <i class="fa fa-circle text-other"></i> Events
                        <i class="fa fa-circle text-other"></i> Reimbursements
                        <i class="fa fa-circle text-other"></i> Other
                        <hr>
                        <div class="stats">
                            <i class="fa fa-pie-chart"></i> Rounded values
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Reports</h4>
                        <p class="category">List of reports submitted by treasurer</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Date Submitted</th>
                            </thead>
                            <tbody>
                                <% for (var i = 0; i < reports.length; i++) { %>
                                  <% var report = reports[i]; %>
                                  <tr>
                                      <td><%- report.category %></td>
                                      <td><%- report.desc %></td>
                                      <td><%- report.dollars %></td>
                                      <td><%- timeToString(report.lastUpdated) %></td>
                                  </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <% if (leadership === true) { %>
          <div class="row">
              <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Create report</h4>
                        <p class="category">Used for treasurer to report spending/income</p>
                    </div>
                    <div class="content">
                        <form action="/finReports" method="post" id="finReportForm">
                            <div class="row">
                              <div class="col-md-6">
                                <div class="form-group">
                                    <label>Amount ($)</label>
                                    <input type="number" name="dollars" placeholder="negative means spending, postive means income" class="form-control" required />
                                </div>
                              </div>
                              <div class="col-md-6">
                                  <div class="form-group">
                                      <label>Category</label>
                                      <select form="finReportForm" name="category" class="form-control" required>
                                        <option value="Contract">Contract</option>
                                        <option value="Membership Dues">Membership Dues</option>
                                        <option value="Retreat">Retreat</option>
                                        <option value="Food">Food</option>
                                        <option value="Events">Events</option>
                                        <option value="Reimbursements">Reimbursements</option>
                                        <option value="Other">Other</option>
                                      </select>
                                  </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-md-12">
                                <div class="form-group">
                                    <label>Description</label>
                                    <input type="text" name="desc" placeholder="explain what you are reporting" class="form-control" required />
                                </div>
                              </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right">Submit</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
              </div>
          </div>
        <% } %>
    </div>
</div>
